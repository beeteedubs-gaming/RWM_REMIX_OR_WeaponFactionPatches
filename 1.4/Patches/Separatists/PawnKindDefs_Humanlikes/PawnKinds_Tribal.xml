<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Neronix17.OuterRim.Separatists</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="Tribal_Berserker"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistBlade</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="Tribal_HeavyArcher"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistPistol</li>
						<li>ORSeparatistCarbine</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="Tribal_ChiefMelee"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistBlade</li>
						<li>ORSeparatistAny</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="Tribal_ChiefRanged"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistAny</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>	
</Patch>