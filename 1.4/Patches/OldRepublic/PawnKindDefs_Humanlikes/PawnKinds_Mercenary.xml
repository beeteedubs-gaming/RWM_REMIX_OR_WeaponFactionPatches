<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Neronix17.OuterRim.OldRepublic</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenaryGunnerBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicAny</li>
						<li>ORSithEmpireAny</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenarySniperBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicSniper</li>
						<li>ORSithEmpireSniper</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenaryHeavyBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicHeavyFire</li>
						<li>ORSithEmpireHeavyFire</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenaryEliteTierBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicAny</li>
						<li>ORSithEmpireAny</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>	
</Patch>