<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Neronix17.OuterRim.Separatists</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenaryGunnerBase"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistAny</li>
						<li>ORSeparatistRifle</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenarySniperBase"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistSniper</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenarySlasherBase"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistBlade</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="MercenaryEliteTierBase"]/weaponTags</xpath>
					<value>
						<li>ORSeparatistAny</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>	
</Patch>