					<xpath>Defs/PawnKindDef[@Name="TraderBase"]/weaponTags</xpath>
					<value>
						<li>ORImperialStandardEarly</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="CouncilmanBase"]/weaponTags</xpath>
					<value>
						<li>ORImperialStandard</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>	
</Patch>