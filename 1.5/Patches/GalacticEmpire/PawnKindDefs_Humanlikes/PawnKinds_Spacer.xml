			<li>Neronix17.OuterRim.GalacticEmpire</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="VillagerBase"]/weaponTags</xpath>
