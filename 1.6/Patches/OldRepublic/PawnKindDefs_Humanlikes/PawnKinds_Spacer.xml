<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Neronix17.OuterRim.OldRepublic</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="VillagerBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicLight</li>
						<li>ORSithEmpireLight</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="GuardBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicLight</li>
						<li>ORSithEmpireLight</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="TraderBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicLight</li>
						<li>ORSithEmpireLight</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[@Name="CouncilmanBase"]/weaponTags</xpath>
					<value>
						<li>OROldRepublicAny</li>
						<li>ORSithEmpireAny</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>	
</Patch>